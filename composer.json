{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "authors": [
        {
            "name": "Kartik Patel",
            "email": "Kartik@gurudigital.nz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "^4.4.3@stable",
        "gorriecoe/silverstripe-linkfield": "^1.0",
        "gorriecoe/silverstripe-link": "^1.2",
        "jonom/focuspoint": "^3.1",
        "undefinedoffset/sortablegridfield": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "deployer/deployer": "^6.6",
        "lekoala/silverstripe-debugbar": "^2.0"
    },
    "extra": {
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ],
        "expose": [
            "themes/forumsite/assets/"
        ]
    },
    "scripts": {
      "build": "php vendor/silverstripe/framework/cli-script.php /dev/build",
      "dep": "php vendor/deployer/deployer/bin/dep",
      "unlock": "dep deploy:unlock"
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
